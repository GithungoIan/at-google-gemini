# VoiceAI Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development

# Server Configuration
PORT=8080
INTERFACE=0.0.0.0

# Africa's Talking API Credentials
# Get these from: https://account.africastalking.com/
AT_API_KEY=your_africas_talking_api_key_here
AT_USERNAME=your_africas_talking_username_here

# Google Gemini API Key
# Get this from: https://ai.google.dev/
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Configuration (for production)
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Optional: Database Configuration
# DATABASE_URL=postgresql://localhost:5432/voiceai
# DATABASE_USERNAME=voiceai
# DATABASE_PASSWORD=your_password

# Optional: Redis Configuration
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
